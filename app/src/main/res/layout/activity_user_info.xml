<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.member.UserInfoActivity">

    <include layout="@layout/topbar_nor"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_userinfo_view"></include>

        </LinearLayout>
    </ScrollView>

    <com.likeit.aqe365.view.BorderTextView
        android:id="@+id/tv_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_xxlarge"
        android:layout_marginBottom="@dimen/width20"
        android:layout_marginLeft="@dimen/dip_xxlarge"
        android:layout_marginRight="@dimen/dip_xxlarge"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:padding="8dip"
        android:text="确定修改"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/dp_5" />
</LinearLayout>