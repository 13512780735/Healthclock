<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RedActionBar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/red_colorPrimary</item>
        <item name="titleTextStyle">@style/RedTitleTextStyle</item>
    </style>

    <style name="RedTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/title_text_color</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BlueActionBar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/blue_colorPrimary</item>
        <item name="titleTextStyle">@style/BlueTitleTextStyle</item>
    </style>

    <style name="BlueTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/blue_colorAccent</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.Red.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Red.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--线样式-->
    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="RadioButtonStyles">
        <item name="android:button">@drawable/selector_radio_bg</item>
    </style>
    <!--圆角Dialog-->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- 有边框和背景的View -->
    <declare-styleable name="BorderTextView">
        <attr name="strokeWidth01" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="strokeColor01" format="color" />
        <attr name="enableBackColor" format="color" />
        <attr name="contentBackColor" format="color" />
        <attr name="contentPressedColor" format="color" />
        <attr name="followTextColor" format="boolean" />
    </declare-styleable>
    <!--checkBox-->
    <style name="mycheckbox1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/register_check</item>
    </style>


    <style name="Theme.mainTransparent" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <!--全透明效果-->
    </style>

    <!-- 图片全屏-->
    <style name="Theme.imgFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <!--全透明效果-->
    </style>

    <style name="dialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--自定义Dialog-->
    <style name="Custom_Dialog_Style" parent="@android:style/Theme.Dialog">
        <!--窗口背景色透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮在界面上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <!-- 是否允许背景变暗 --> <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!--地址默认-->
    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/address_check</item>
    </style>

    <style name="OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">OnClick</item>
    </style>
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_alpha_out</item>
        <item name="android:windowExitAnimation">@anim/popup_alpha_in</item>
    </style>



    <style name="Theme.picker" parent="android:Theme.Holo.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="new_alarm_clcok_item_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="new_alarm_clcok_item_describe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="new_alarm_clcok_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_round_pop_bg_5</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="new_alarm_clcok_item_toggle_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checked">true</item>
        <item name="android:button">@drawable/toggle_btn_alarm_on_off</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>
    <style name="new_alarm_clock_repeat_days_llyt">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="new_alarm_clcok_repeat_days_tog_btn">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/toggle_btn_repeat_week</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/text_color_toggle_btn_circle</item>
    </style>
