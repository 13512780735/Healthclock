<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
       
    <item android:state_checked="false">  <!-- 按钮未点击-->
               
        <shape>
                         
            <stroke android:width="0.8dp" android:color="@color/line" /><!-- 边框颜色，边框大小-->
                         
            <solid android:color="@color/white" /> <!-- 填充的颜色：这里设置背景透明 -->
                         
            <corners android:radius="25dip" /><!-- android:radius 弧形的半径 -->
                         
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                   
        </shape>
           
    </item>
    <item android:state_checked="true"> <!-- 按钮选中状态-->           
        <shape>
                         
            <stroke android:width="0.8dp" android:color="?title_text_color" /><!-- 边框颜色，边框大小-->
                         
            <solid android:color="?title_text_color" /> <!-- 填充的颜色：这里设置背景透明 -->
                         
            <corners android:radius="25dip" /><!-- android:radius 弧形的半径 -->
                         
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                   
        </shape>
           
    </item>
</selector>